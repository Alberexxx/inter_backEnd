<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/addproduto/style.css">
</head>

<body>

    <%- include('./partials/navbar.ejs') %>


    <div class="signup-body">
        <div class="container">
            <div class="login-box">
                <div class="login-header">
                    <h2>Editar Produto</h2>
                    <p>edite as informações abaixo! </p>
                </div>
                    <div class="div-form">
                        <div class="div1">
                            <div class="div-form">
                                <div class="div1" id="tamanho">
                                    <div class="input-container tamanho">
                                        <label>Foto do Produto</label>
                                        <br>
                                    <form action="/admin/produto/edit/env" method="post">
                                        <label for="foto">
                                            <img id="fotoproduto" style="width: 100px;" src="/imagem/<%= produto.id_produto %>" alt="" />
                                        </label>
                                        <label class="borda-arredondada input" for="foto"
                                            style="color: rgb(26, 255, 0);">Selecionar um arquivo
                                            <img src="https://cdn3.iconfinder.com/data/icons/glypho-generic-icons/64/action-upload-alt-512.png"
                                                style="width: 20px" />
                                        </label>
                                        <input type="file" accept="image/png, image/jpeg, image/jpg" name="foto"
                                            id="foto" style="opacity: 0;">
                                    </div>
                                    <div class="input-container tamanho">
                                        <label for="tamanho">Tamanho</label>

                                        <select id="select-tamanho" name="tamanho">

                                        <% if (produto.tamanho === "P") { %>
                                            <option value="P" selected>P</option>

                                        <% } else {%>
                                            <option value="P">P</option>
                                        <% } %>
                                        <% if (produto.tamanho === "M") { %>
                                            <option value="M" selected>M</option>

                                         <% } else {%>
                                            <option value="M">M</option>

                                         <% } %>
                                         <% if (produto.tamanho === "G") { %>
                                            <option value="G" selected>G</option>

                                         <% } else {%>
                                            <option value="G">G</option>

                                         <% } %>
                                         <% if (produto.tamanho === "GG") { %>
                                            <option value="GG" selected>GG</option>

                                         <% } else {%>
                                            <option value="GG">GG</option>

                                         <% } %>

                                            

                                        </select>
                                        

                                    </div>
                                    <div class="input-container tamanho">
                                        <div class="modelo">
                                            <label id="modelolabel">Modelo: </label>

                                            <% if (produto.modelo === "masculino") { %>
                                                 <label class="modelo-option" for="m">
                                                <input type="radio" name="modelo" id="m" value="masculino" checked>
                                                Masculino
                                            </label>
                                            <label class="modelo-option" for="f">
                                                <input type="radio" name="modelo" id="f" value="feminino"  > 
                                                   Feminino                     
                                                </label>
                                            <%} else {%>
                                                <label class="modelo-option" for="m">
                                                    <input type="radio" name="modelo" id="m" value="masculino" >
                                                    Masculino
                                                </label>
                                                <label class="modelo-option" for="f">
                                                <input type="radio" name="modelo" id="f" value="feminino"  checked> 
                                                    Feminino                     
                                                </label>
                                            <%}%>
                                            
                                           
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="div1">
                                    <div class="input-container">
                                        <label for="nome">Nome</label>
                                        <input type="text" name="nome" id="nome" placeholder="Nome do Produto" value="<%= produto.nome_produto %>" required>
                                    </div>
                                    <div class="input-container">
                                        <label for="descricao">descrição</label>
                                        <input type="text" name="descricao" id="" placeholder="digite uma descricao para o produto" value="<%= produto.descricao %>">
                                        <label for="cor">Cor</label>
                                        <input type="text" name="cor" id="cor" placeholder="Digite a cor" required value="<%= produto.cor %>">
                                    </div>
                                    <div class="input-container">
                                        <label for="categoria">Categoria</label>
                                        <input type="text" name="categoria" id="categoria"
                                            placeholder="Digite a Categoria" required value="<%= produto.nome_categoria %>">
                                            <input type="hidden" name="id" value="<%= produto.id_produto %>">
                                    </div>
                                    <div class="input-container">
                                        <label for="valor">Valor</label>
                                        <input type="number" min="1" id="valor" name="preco" step="0.01"
                                            placeholder="Digite o Valor" required value="<%= produto.preco %>">
                                    </div>
                                    
                                    <div class="input-container">
                                        <input type="submit" value=" Editar Produto ">

                    </form> 
                                    </div>
                                </div>

                                
                            </div>
                        </div>
                    </div>
                

                
            </div>
        </div>
    </div>
</body>
<script>
    document.getElementById('signup-form').addEventListener('submit', function(event) {
        console.log("Dados do formulário: ", {
            id: document.getElementById('id').value,
            nome: document.getElementById('nome').value,
            preco: document.getElementById('preco').value,
            descricao: document.getElementById('descricao').value,
            tamanho: document.getElementById('select-tamanho').value,
            modelo: document.querySelector('input[name="modelo"]:checked').value,
            cor: document.getElementById('cor').value,
            categoria: document.getElementById('categoria').value,
        });
    });
</script>

</html>