<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carrinho de Compras</title>
    <!--<link rel="stylesheet" href="css/carrinho/light_style.css" /> -->

    <link rel="stylesheet" href="css/carrinho/light_style.css" />

    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"/>
      <script src="/js/carrinho/script.js"></script>
    
      
  </head>
  <body>

    <%- include('./partials/navbar.ejs') %>


    <header>
      <span><a href=""><img src="img/carrinho/logo.png" width="200px" class="media-object  img-responsive img-thumbnail"></a> </span>    
    </div>
    <div class="dark-mode">
   <!-- <button onclick="darkMode()" ><i class='bx bx-moon'></i></button>-->

   </div>
    </header>
    <main>
      <div class="page-title">Seu Carrinho</div>
      <div class="content">
        <section>
          <table>
            <thead>
              <tr>
                <th>Produto</th>
                <th>Pre√ßo</th>
                <th>Quantidade</th>
                <th>Total</th>
                <th>-</th>
              </tr>
            </thead>

            <tbody>

              <% produtos.forEach(produto => { %>
               
              
              <tr>
                <td>
                  <div class="product">
                    <img src="/imagem/<%=  produto.id_produto %>" alt="" style="width: 20%;" />
                    <div class="info">
                      <div class="name"><%=  produto.nome_produto %></div>
                    </div>
                  </div>
                </td>
                <td>R$ <%=  produto.preco %> </td>
                <td>
                  <div class="qty">
                    <button><i class="bx bx-minus"></i></button>
                    <span>1</span>
                    <button><i class="bx bx-plus"></i></button>
                  </div>
                </td>
                <td>R$ <%=  produto.preco %> </td>
                <td>
                  <button class="remove"><i class="bx bx-x"></i></button>
                </td>
              </tr>

              <% }) %>

            </tbody>
          </table>
        </section>
        
        <form action="" method="post">
        <aside>
          <div class="box">
            <header>Resumo da compra</header>
            <div class="info">
              <div><span>Sub-total</span><span>R$ </span></div>
              <div><span>Frete</span><span>Gratuito</span></div>
        
            </div>
            <footer>
              <span>Total</span>
              <span>R$ </span>
            </footer>
          </div>
          <button>Finalizar Compra</button>
        </aside>
      </form>
      </div>
    </main>
  </body>
</html>